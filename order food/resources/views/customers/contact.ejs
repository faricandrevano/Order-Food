
<section class="register flex justify-center py-16">
<div class="block p-6 rounded-lg shadow-lg bg-white max-w-md w-1/2 h-fit">
  <form accept="/" method="POST" id="submitReg" onsubmit="sendEmail(); reset(); return false">
    <%if(messages.error){%>
      <span class="text-red-500 text-sm"><%= messages.error%></span>
    <%}%>
    <div>
      <div class="form-group mb-6">
        <input type="text" name="name" id="username"required class="form-control
          block
          w-full
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" id="exampleInput123"
          aria-describedby="emailHelp123" placeholder="Name">
      </div>
    </div>
    <div class="form-group mb-6">
      <input type="email" id="email" name="email" required class="form-control block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" id="exampleInput125"
        placeholder="email">
    </div>
    <div class="form-group mb-6">
      <input type="phone" name="phone" class="form-control block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" id="exampleInput126"
        placeholder="phone">
    </div>
    <div class="form-group mb-6">
       <select id="kategori" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline" required>
                             <option value="komen">saran dan komentar</option>
                             <option value="pertanyaan">Pertanyaan</option>
                             <option value="Keluhan">Keluhan</option>
                             <option value="Pujian">Pujian</option>
                           </select>
       
    </div>
    <div class="form-group mb-6">
      <textarea class="px-3 py-1.5 border border-solid border-gray-300 rounded focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" name="message" id="isi" cols="43" rows="10" placeholder="masukan saran/keluhan"></textarea>
    </div>
    <button id="btnRegister" type="submit" class="
      w-full
      px-6
      py-2.5
      bg-[#FE5F1E]
      text-white
      font-medium
      text-xs
      leading-tight
      uppercase
      rounded
      shadow-md
      btn-primary
      ">Send</button>
    </p>
  </form>
</div>
</section>