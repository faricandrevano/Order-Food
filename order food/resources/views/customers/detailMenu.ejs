
<!-- component -->
<section class="text-gray-700 body-font overflow-hidden bg-white mt-12">
  <div class="container px-5 py-24 mx-auto">
    <%dataMenu.forEach((dataMenu)=>{%>
    <div class="lg:w-4/5 mx-auto flex flex-wrap">
      <img alt="ecommerce" class="lg:w-1/2 w-full object-cover object-center rounded border border-gray-200" src="<%=dataMenu.image%>">
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
        <h2 class="text-sm title-font text-gray-500 tracking-widest">FOOD NAME</h2>
        <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%=dataMenu.name%></h1>
        <p class="leading-relaxed mt-4"><%=dataMenu.desc%></p>
        <hr class="my-4">
        <div class="flex justify-center space-x-10">
          <span class="title-font font-medium text-2xl text-gray-900"><%=rupiah(dataMenu.price)%></span>
        </div>
        <div class="flex mt-4">
          <button class="flex add-to-cart justify-center ml-auto text-white bg-red-500 border-0 py-2 w-full focus:outline-none hover:bg-red-600 rounded"  id="countTotal" data-pizza="<%= JSON.stringify(dataMenu) %>">Add</button>
            <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4 px-2">
              <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
              </svg>
            </button>
        </div>
      </div>
    </div>
    <%})%>
  </div>
</section>


